# LearnIT Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Firebase Admin SDK
# Option 1: Use local file (for development)
# Place your service account JSON at: src/serviceAccountKey.json

# Option 2: Use environment variable (for production)
# FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"scisteps-a1f37",...}'

# Database Configuration
# DATABASE_URL=your_database_url_here
# DATABASE_USER=your_db_user
# DATABASE_PASSWORD=your_db_password

# Server Configuration
PORT=3000
NODE_ENV=development

# API Keys (if needed)
# JWT_SECRET=your_jwt_secret_here
# API_KEY=your_api_key_here

# Logging
# LOG_LEVEL=info
